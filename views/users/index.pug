extends ../layouts/common

block content
  h1 Users List

  form(action="/users/search", method="GET" class="d-flex")
    input(type="text" name="q" value=q class="form-control ml-1")
    button(type="submit" class="btn btn-primary ml-2") Search

  table.table
    tr 
      th Avatar
      th Name
      th Phone 
    each user in users
      tr
        td
          img(src=user.avatar, alt=user.name+"'s avatar" width="64")    
        td=user.name 
        td=user.phone            
        td
          a.btn.btn-info(href="/users/" + user.id) 
            | View